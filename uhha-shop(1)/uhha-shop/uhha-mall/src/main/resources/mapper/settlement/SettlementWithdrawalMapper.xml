<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.uhha.settlement.mapper.SettlementWithdrawalMapper">

    <resultMap type="SettlementWithdrawal" id="SettlementWithdrawalResult">
        <result property="id"    column="id"    />
        <result property="storeName"    column="store_name"    />
        <result property="withdrawalCode"    column="withdrawal_code"    />
        <result property="withdrawalAmount"    column="withdrawal_amount"    />
        <result property="realStoreInAmount"    column="real_store_in_amount"    />
        <result property="storeId"    column="store_id"    />
        <result property="status"    column="status"    />
        <result property="payTime"    column="pay_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="failReason"    column="fail_reason"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSettlementWithdrawalVo">
        select id, store_name, withdrawal_code, withdrawal_amount, real_store_in_amount, store_id, status, pay_time, create_time, create_by, fail_reason, update_time from settlement_withdrawal
    </sql>

    <select id="selectSettlementWithdrawalList" parameterType="SettlementWithdrawal" resultMap="SettlementWithdrawalResult">
        <include refid="selectSettlementWithdrawalVo"/>
        <where>
            <if test="storeName != null  and storeName != ''"> and store_name like concat('%', #{storeName}, '%')</if>
            <if test="withdrawalCode != null  and withdrawalCode != ''"> and withdrawal_code = #{withdrawalCode}</if>
            <if test="withdrawalAmount != null "> and withdrawal_amount = #{withdrawalAmount}</if>
            <if test="realStoreInAmount != null "> and real_store_in_amount = #{realStoreInAmount}</if>
        </where>
    </select>

    <select id="selectSettlementWithdrawalById" parameterType="Long" resultMap="SettlementWithdrawalResult">
        <include refid="selectSettlementWithdrawalVo"/>
        where id = #{id}
    </select>

    <insert id="insertSettlementWithdrawal" parameterType="SettlementWithdrawal" useGeneratedKeys="true" keyProperty="id">
        insert into settlement_withdrawal
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="storeName != null and storeName != ''">store_name,</if>
            <if test="withdrawalCode != null and withdrawalCode != ''">withdrawal_code,</if>
            <if test="withdrawalAmount != null">withdrawal_amount,</if>
            <if test="realStoreInAmount != null">real_store_in_amount,</if>
            <if test="storeId != null">store_id,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="payTime != null">pay_time,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="failReason != null">fail_reason,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="storeName != null and storeName != ''">#{storeName},</if>
            <if test="withdrawalCode != null and withdrawalCode != ''">#{withdrawalCode},</if>
            <if test="withdrawalAmount != null">#{withdrawalAmount},</if>
            <if test="realStoreInAmount != null">#{realStoreInAmount},</if>
            <if test="storeId != null">#{storeId},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="payTime != null">#{payTime},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="failReason != null">#{failReason},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSettlementWithdrawal" parameterType="SettlementWithdrawal">
        update settlement_withdrawal
        <trim prefix="SET" suffixOverrides=",">
            <if test="storeName != null and storeName != ''">store_name = #{storeName},</if>
            <if test="withdrawalCode != null and withdrawalCode != ''">withdrawal_code = #{withdrawalCode},</if>
            <if test="withdrawalAmount != null">withdrawal_amount = #{withdrawalAmount},</if>
            <if test="realStoreInAmount != null">real_store_in_amount = #{realStoreInAmount},</if>
            <if test="storeId != null">store_id = #{storeId},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="failReason != null">fail_reason = #{failReason},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSettlementWithdrawalById" parameterType="Long">
        delete from settlement_withdrawal where id = #{id}
    </delete>

    <delete id="deleteSettlementWithdrawalByIds" parameterType="String">
        delete from settlement_withdrawal where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
