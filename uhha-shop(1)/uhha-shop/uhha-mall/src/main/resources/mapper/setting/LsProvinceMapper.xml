<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.uhha.setting.mapper.LsProvinceMapper">

    <resultMap type="LsProvince" id="LsProvinceResult">
        <result property="id" column="id"/>
        <result property="countryId" column="country_id"/>
        <result property="name" column="name"/>
        <result property="sort" column="sort"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="delTime" column="del_time"/>
    </resultMap>

    <sql id="selectLsProvinceVo">
        select id, country_id, `name`, sort, del_flag, create_time, modify_time, del_time from ls_province
    </sql>

    <select id="selectLsProvinceList" parameterType="LsProvince" resultMap="LsProvinceResult">
        <include refid="selectLsProvinceVo"/>
        <where>
            1=1
            <if test="countryId != null ">and country_id = #{countryId}</if>
            <if test="name != null  and name != ''">and `name` like concat('%', #{name}, '%')</if>
            <if test="sort != null ">and sort = #{sort}</if>
            <if test="modifyTime != null ">and modify_time = #{modifyTime}</if>
            <if test="delTime != null ">and del_time = #{delTime}</if>
        </where>
    </select>

    <select id="selectLsProvinceById" parameterType="Long" resultMap="LsProvinceResult">
        <include refid="selectLsProvinceVo"/>
        where id = #{id}
    </select>

    <insert id="insertLsProvince" parameterType="LsProvince" useGeneratedKeys="true" keyProperty="id">
        insert into ls_province
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="countryId != null">country_id,</if>
            <if test="name != null">`name`,</if>
            <if test="sort != null">sort,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createTime != null">create_time,</if>
            <if test="modifyTime != null">modify_time,</if>
            <if test="delTime != null">del_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="countryId != null">#{countryId},</if>
            <if test="name != null">#{name},</if>
            <if test="sort != null">#{sort},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="modifyTime != null">#{modifyTime},</if>
            <if test="delTime != null">#{delTime},</if>
        </trim>
    </insert>

    <update id="updateLsProvince" parameterType="LsProvince">
        update ls_province
        <trim prefix="SET" suffixOverrides=",">
            <if test="countryId != null">country_id = #{countryId},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="modifyTime != null">modify_time = #{modifyTime},</if>
            <if test="delTime != null">del_time = #{delTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLsProvinceById" parameterType="Long">
        delete from ls_province where id = #{id}
    </delete>

    <delete id="deleteLsProvinceByIds" parameterType="String">
        delete from ls_province where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>