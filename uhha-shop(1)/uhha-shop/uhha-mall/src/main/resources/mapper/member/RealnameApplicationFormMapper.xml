<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.uhha.member.mapper.RealnameApplicationFormMapper">

    <resultMap type="RealnameApplicationForm" id="RealnameApplicationFormResult">
        <result property="id"    column="id"    />
        <result property="userBankId"    column="user_bank_id"    />
        <result property="uid"    column="uid"    />
        <result property="status"    column="status"    />
        <result property="opinion"    column="opinion"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="updateBy"      column="update_by"    />
    </resultMap>

    <sql id="selectRealnameApplicationFormVo">
        select id, user_bank_id, uid, status, opinion, create_time, create_by, update_time, update_by from realname_application_form
    </sql>

    <select id="selectRealnameApplicationFormList" parameterType="RealnameApplicationForm" resultMap="RealnameApplicationFormResult">
        <include refid="selectRealnameApplicationFormVo"/>
        <where>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectRealnameApplicationFormById" parameterType="Long" resultMap="RealnameApplicationFormResult">
        <include refid="selectRealnameApplicationFormVo"/>
        where id = #{id}
    </select>

    <insert id="insertRealnameApplicationForm" parameterType="RealnameApplicationForm" useGeneratedKeys="true" keyProperty="id">
        insert into realname_application_form
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userBankId != null">user_bank_id,</if>
            <if test="uid != null">uid,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="opinion != null">opinion,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null">update_by,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userBankId != null">#{userBankId},</if>
            <if test="uid != null">#{uid},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="opinion != null">#{opinion},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
        </trim>
    </insert>

    <update id="updateRealnameApplicationForm" parameterType="RealnameApplicationForm">
        update realname_application_form
        <trim prefix="SET" suffixOverrides=",">
            <if test="userBankId != null">user_bank_id = #{userBankId},</if>
            <if test="uid != null">uid = #{uid},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="opinion != null">opinion = #{opinion},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            </trim>
        where id = #{id}
    </update>

    <delete id="deleteRealnameApplicationFormById" parameterType="Long">
        delete from realname_application_form where id = #{id}
    </delete>

    <delete id="deleteRealnameApplicationFormByIds" parameterType="String">
        delete from realname_application_form where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>